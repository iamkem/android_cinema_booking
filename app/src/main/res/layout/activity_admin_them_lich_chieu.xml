<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_background"
    tools:context=".Admin.AdminThemLichChieuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/simpletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm lịch chiếu"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginEnd="20dp">

    </TextView>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/add_showings_movie_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/input_design_admin"
        android:layout_below="@+id/simpletext" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/add_showings_cinema_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design_admin"
        android:layout_below="@+id/add_showings_movie_spinner" />

    <TextView
        android:id="@+id/add_showings_from_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_showings_cinema_spinner"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design_admin"
        android:hint="Khởi chiếu từ..."
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fitsSystemWindows="true"
        />

    <TextView
        android:id="@+id/add_showings_to_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_showings_from_date"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design_admin"
        android:hint="Kết thúc chiếu..."
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fitsSystemWindows="true"
        />

    <TextView
        android:id="@+id/add_showings_time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_showings_to_date"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design_admin"
        android:hint="Suất chiếu..."
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fitsSystemWindows="true"
        />



    <Button
        android:id="@+id/add_showings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/add_showings_time_start"
        android:paddingBottom="10dp"
        android:layout_marginRight="45dp"
        android:background="@color/colorPrimary"
        android:hint="Thêm lịch chiếu"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>